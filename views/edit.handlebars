<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <div class="mb-3">
          <label for="name" class="mb-2">餐廳名稱：</label>
          <input type="text" name="name" id="name" placeholder="餐廳名稱" value="{{restaurant.name}}">
        </div>
        <div class="mb-3">
          <label for="name_en" class="mb-2">餐廳英文名稱：</label>
          <input type="text" name="name_en" id="name_en" placeholder="餐廳英文名稱" value="{{restaurant.name_en}}">
        </div>
        <div class="mb-3">
          <label for="category" class="mb-2">餐廳類型：</label>
          <input type="text" name="category" id="category" placeholder="餐廳類型" value="{{restaurant.category}}">
        </div>
        <div class="mb-3">
          <label for="image" class="mb-2">餐廳照片：</label>
          <input type="text" name="image" id="image" placeholder="餐廳照片" value="{{restaurant.image}}">
        </div>
        <div class="mb-3">
          <label for="location" class="mb-2">餐廳地點：</label>
          <input type="text" name="location" id="location" placeholder="餐廳地點" value="{{restaurant.location}}">
        </div>
        <div class="mb-3">
          <label for="phone" class="mb-2">餐廳電話：</label>
          <input type="text" name="phone" id="phone" placeholder="餐廳電話" value="{{restaurant.phone}}">
        </div>
        <div class="mb-3">
          <label for="google_map" class="mb-2">餐廳地圖：</label>
          <input type="text" name="google_map" id="google_map" placeholder="Google map"
            value="{{restaurant.google_map}}">
        </div>
        <div class="mb-3">
          <label for="rating" class="mb-2">餐廳評分：</label>
          <input type="text" name="rating" id="rating" value="{{restaurant.rating}}">
        </div>
        <div class="mb-3">
          <label for="description" class="mb-2">餐廳詳細資訊：</label>
          <input type="text" name="description" id="description" value="{{restaurant.description}}">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">儲存資訊</button>
      <a href="/" class="btn btn-secondary">返回首頁</a>
    </div>
  </div>
</form>